<Window x:Class="gfx_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gfx_app"
        mc:Ignorable="d"
        Title="testingGFX" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label x:Name="position_mouse"></Label>
        </StackPanel>

        <Canvas x:Name="main_canvas" Grid.Column="1" MouseMove="main_canvas_MouseMove" Background="Black">
            <!-- MouseMove="main_canvas_MouseMove" -->
        </Canvas>
        
        
    </Grid>
</Window>
